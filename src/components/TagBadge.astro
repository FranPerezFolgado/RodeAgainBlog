---
import Link from "./Link.astro";

const {tag} = Astro.props;
---

<Link
  href={`/tags/${tag}`}
  class="inline-flex items-center gap-x-1.5 rounded-full border border-gray-200 bg-white px-3 py-1.5 text-xs font-medium text-gray-800 shadow-sm dark:border-neutral-700 dark:bg-neutral-900 dark:text-white"
  text={tag}
  />
